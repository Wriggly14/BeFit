@model BeFit.Models.BeFit.ExerciseType

@{
    ViewData["Title"] = "Usuń typ ćwiczenia";
}

<h1>@ViewData["Title"]</h1>

<h3>Czy na pewno chcesz usunąć ten typ ćwiczenia?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Usuń" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
