@model BeFit.Models.BeFit.ExerciseType

@{
    ViewData["Title"] = "Dodaj typ ćwiczenia";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MinLoad" class="control-label"></label>
                <input asp-for="MinLoad" class="form-control" />
                <span asp-validation-for="MinLoad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxLoad" class="control-label"></label>
                <input asp-for="MaxLoad" class="form-control" />
                <span asp-validation-for="MaxLoad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MinReps" class="control-label"></label>
                <input asp-for="MinReps" class="form-control" />
                <span asp-validation-for="MinReps" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxReps" class="control-label"></label>
                <input asp-for="MaxReps" class="form-control" />
                <span asp-validation-for="MaxReps" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
