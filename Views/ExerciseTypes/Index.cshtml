@model IEnumerable<BeFit.Models.BeFit.ExerciseType>

@{
    ViewData["Title"] = "Typy ćwiczeń";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowy typ ćwiczenia</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinLoad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxLoad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinReps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxReps)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinLoad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxLoad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinReps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxReps)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
