@model IEnumerable<BeFit.Models.BeFit.PerformedExercise>

@{
    ViewData["Title"] = "Wykonane ćwiczenia";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj wykonane ćwiczenie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Sesja</th>
            <th>Ćwiczenie</th>
            <th>Serie</th>
            <th>Powtórzenia w serii</th>
            <th>Obciążenie</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.TrainingSession.Start.ToString("g")</td>
            <td>@item.ExerciseType.Name</td>
            <td>@item.Sets</td>
            <td>@item.RepsPerSet</td>
            <td>@item.Load</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
